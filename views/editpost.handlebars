<form class="add-post-form">
    <div>
        <h2>Edit Post</h2>
        <div class="form-group">
            <label>Title</label>
            <textarea class="form-input" id="title">{{posting.title}}</textarea>
        </div>
        <div class="form-group">
            <label>Content</label>
            <textarea class="form-input" id="content">{{posting.content}}</textarea>
        </div>
        <button class="btn btn-primary" type="submit" value="submit">POST</button>
    </div>
</form>

<button class="btn btn-primary" id="delete-post-btn">DELETE</button>

<script src="/js/editpost.js"></script>