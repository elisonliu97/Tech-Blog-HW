<section class="container">
    <div class="title">
        <h2 class="top-header" style="display: inline">{{posting.title}}</h2>
        <h5 class="user">Posted by {{posting.user.username}} on {{posting.date_created}}</h5>
    </div>
    <div>
        <h4 class="text">{{posting.content}}</h4>
    </div>
</section>

<form class="add-comment-form">
    <label>Add Comment</label>
    <input type="text" id="comment-box">
    <button type="submit">OK</button>
</form>
{{#each comments as |comment|}}
<section>
        <div class="title">
        <h5 class="user">Posted by {{user.username}} on {{comment.date_created}}</h5>
    </div>
    <div>
        <h4 class="text">{{comment.content}}</h4>
    </div>
    {{#if comment.from_user}}
    <button><a href="/editcomment/{{comment.id}}">EDIT</a></button>
    {{/if}}
</section>
{{!-- if req.session.user_id = user_id on comment --}}
{{!-- display a button to either edit or delete --}}
{{!-- if edit then go to edit comment page --}}
{{!-- if delete then use delete comment route --}}
{{/each}}
<script src="/js/post.js"></script>